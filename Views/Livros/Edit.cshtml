@model BookSphere.Models.Livro

@{
    ViewData["Title"] = "Editar Livro";
}

<h2>@ViewData["Title"]</h2>
<hr />
<div class="row justify-content-center">
    <div class="col-md-8">
        <form asp-action="Edit">
            <input type="hidden" asp-for="Id" />

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="Titulo" class="form-label">Título <span class="text-danger">*</span></label>
                <input asp-for="Titulo" class="form-control form-control-lg" />
                <span asp-validation-for="Titulo" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Descricao" class="form-label">Descrição</label>
                <textarea asp-for="Descricao" class="form-control form-control-lg"></textarea>
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="AnoPublicacao" class="form-label">Ano de Publicação <span class="text-danger">*</span></label>
                <input asp-for="AnoPublicacao" class="form-control form-control-lg" />
                <span asp-validation-for="AnoPublicacao" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Paginas" class="form-label">Número de Páginas</label>
                <input asp-for="Paginas" class="form-control form-control-lg" />
                <span asp-validation-for="Paginas" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="ISBN" class="form-label">ISBN</label>
                <input asp-for="ISBN" class="form-control form-control-lg" />
                <span asp-validation-for="ISBN" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="CapaUrl" class="form-label">URL da Capa</label>
                <input asp-for="CapaUrl" class="form-control form-control-lg" />
                <span asp-validation-for="CapaUrl" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="QuantidadeDisponivel" class="form-label">Quantidade Disponível <span class="text-danger">*</span></label>
                <input asp-for="QuantidadeDisponivel" class="form-control form-control-lg" />
                <span asp-validation-for="QuantidadeDisponivel" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="AutorId" class="form-label">Autor <span class="text-danger">*</span></label>
                <select asp-for="AutorId" class="form-select" asp-items="@(ViewData["AutorId"] as SelectList)">
                    <option value="">Selecione o Autor</option>
                </select>
                <span asp-validation-for="AutorId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="EditoraId" class="form-label">Editora <span class="text-danger">*</span></label>
                <select asp-for="EditoraId" class="form-select" asp-items="@(ViewData["EditoraId"] as SelectList)">
                    <option value="">Selecione a Editora</option>
                </select>
                <span asp-validation-for="EditoraId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="CategoriaId" class="form-label">Categoria <span class="text-danger">*</span></label>
                <select asp-for="CategoriaId" class="form-select" asp-items="@(ViewData["CategoriaId"] as SelectList)">
                    <option value="">Selecione a Categoria</option>
                </select>
                <span asp-validation-for="CategoriaId" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary btn-lg">
                <i class="fa fa-save"></i> Salvar Alterações
            </button>
            <a asp-action="Index" class="btn btn-secondary btn-lg ms-2">Cancelar</a>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
