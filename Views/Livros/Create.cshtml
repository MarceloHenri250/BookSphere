@model BookSphere.Models.Livro

@{
    ViewData["Title"] = "Cadastrar Livro";
}

<h2>@ViewData["Title"]</h2>

<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-2">
                <label asp-for="Titulo" class="form-label">
                    <i class="fa fa-book"></i> Título
                </label>
                <input asp-for="Titulo" class="form-control" placeholder="Digite o título do livro" />
                <span asp-validation-for="Titulo" class="text-danger"></span>
            </div>

            <div class="form-group mb-2">
                <label asp-for="Descricao" class="form-label">
                    <i class="fa fa-pencil-alt"></i> Descrição
                </label>
                <textarea asp-for="Descricao" class="form-control" placeholder="Descreva o conteúdo do livro"></textarea>
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>

            <div class="form-group mb-2">
                <label asp-for="AnoPublicacao" class="form-label">
                    <i class="fa fa-calendar"></i> Ano de Publicação
                </label>
                <input asp-for="AnoPublicacao" class="form-control" placeholder="Informe o ano de publicação" />
                <span asp-validation-for="AnoPublicacao" class="text-danger"></span>
            </div>

            <div class="form-group mb-2">
                <label asp-for="Paginas" class="form-label">
                    <i class="fa fa-file-alt"></i> Páginas
                </label>
                <input asp-for="Paginas" class="form-control" placeholder="Quantidade de páginas" />
                <span asp-validation-for="Paginas" class="text-danger"></span>
            </div>

            <div class="form-group mb-2">
                <label asp-for="ISBN" class="form-label">
                    <i class="fa fa-barcode"></i> ISBN
                </label>
                <input asp-for="ISBN" class="form-control" placeholder="Número ISBN do livro" />
                <span asp-validation-for="ISBN" class="text-danger"></span>
            </div>

            <div class="form-group mb-2">
                <label asp-for="CapaUrl" class="form-label">
                    <i class="fa fa-image"></i> URL da Capa
                </label>
                <input asp-for="CapaUrl" class="form-control" placeholder="URL da capa do livro" />
                <span asp-validation-for="CapaUrl" class="text-danger"></span>
            </div>

            <div class="form-group mb-2">
                <label asp-for="QuantidadeDisponivel" class="form-label">
                    <i class="fa fa-cogs"></i> Quantidade Disponível
                </label>
                <input asp-for="QuantidadeDisponivel" class="form-control" placeholder="Quantidade disponível do livro" />
                <span asp-validation-for="QuantidadeDisponivel" class="text-danger"></span>
            </div>

            <div class="form-group mb-2">
                <label asp-for="AutorId" class="form-label">
                    <i class="fa fa-user"></i> Autor
                </label>
                <select asp-for="AutorId" class="form-select" asp-items="@(ViewData["AutorId"] as SelectList)">
                    <option value="">Selecione um autor</option>
                </select>
                <span asp-validation-for="AutorId" class="text-danger"></span>
            </div>

            <div class="form-group mb-2">
                <label asp-for="EditoraId" class="form-label">
                    <i class="fa fa-building"></i> Editora
                </label>
                <select asp-for="EditoraId" class="form-select" asp-items="@(ViewData["EditoraId"] as SelectList)">
                    <option value="">Selecione uma editora</option>
                </select>
                <span asp-validation-for="EditoraId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="CategoriaId" class="form-label">
                    <i class="fa fa-list-alt"></i> Categoria
                </label>
                <select asp-for="CategoriaId" class="form-select" asp-items="@(ViewData["CategoriaId"] as SelectList)">
                    <option value="">Selecione uma categoria</option>
                </select>
                <span asp-validation-for="CategoriaId" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-success">
                <i class="fa fa-save"></i> Cadastrar
            </button>
            <a asp-action="Index" class="btn btn-secondary ms-2">
                <i class="fa fa-arrow-left"></i> Cancelar
            </a>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
